<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" prefHeight="400.0" prefWidth="400.0"
      style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-width: 2;"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.oyeshi_fabiha.careerbridge2.AdminLoginController">
    <children>
        <Text text="Admin Portal" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

        <VBox spacing="10" maxWidth="250">
            <Label text="Username" />
            <TextField fx:id="usernameField" promptText="Enter Admin Username" />

            <Label text="Password" />
            <PasswordField fx:id="passwordField" promptText="Enter Password" />

            <Button text="Login" onAction="#handleAdminLogin" prefWidth="Infinity"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;">
                <VBox.margin><Insets top="10" /></VBox.margin>
            </Button>
        </VBox>
    </children>
</VBox>