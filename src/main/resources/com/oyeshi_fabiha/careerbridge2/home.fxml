<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<HBox prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #F4F7FB;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox prefWidth="240.0" style="-fx-background-color: #2C3E50;" spacing="15.0">
            <children>
                <Label text="CareerBridge" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;">
                    <VBox.margin><Insets bottom="30.0" left="20.0" top="30.0"/></VBox.margin>
                </Label>

                <Button alignment="BASELINE_LEFT" prefHeight="45.0" prefWidth="240.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-cursor: hand;" text="  Dashboard" />
                <Button alignment="BASELINE_LEFT" prefHeight="45.0" prefWidth="240.0" style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-cursor: hand;" text="  Find Mentors" />
                <Button alignment="BASELINE_LEFT" prefHeight="45.0" prefWidth="240.0" style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-cursor: hand;" text="  Job Board" />
                <Button alignment="BASELINE_LEFT" prefHeight="45.0" prefWidth="240.0" style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-cursor: hand;" text="  Alumni Success" />
                <Button alignment="BASELINE_LEFT" prefHeight="45.0" prefWidth="240.0" style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-cursor: hand;" text="  Messages" />

                <Region VBox.vgrow="ALWAYS" />
                <Button alignment="BASELINE_LEFT" prefHeight="45.0" prefWidth="240.0" style="-fx-background-color: transparent; -fx-text-fill: #E74C3C;" text="  Logout" />
            </children>
        </VBox>

        <VBox HBox.hgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                    <children>
                        <TextField promptText="Search mentors or jobs..." style="-fx-background-radius: 20; -fx-pref-width: 300; -fx-background-color: #F0F2F5;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Label text="Welcome back, Alex!" style="-fx-font-weight: bold;" />
                                <Circle fill="#3498DB" radius="20.0" />
                            </children>
                        </HBox>
                    </children>
                    <padding><Insets left="30.0" right="30.0" /></padding>
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                    <content>
                        <VBox spacing="30.0">
                            <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /></padding>
                            <children>

                                <HBox spacing="20.0">
                                    <children>
                                        <VBox prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to right, #6a11cb 0%, #2575fc 100%); -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                                            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                                            <children>
                                                <Text fill="WHITE" text="Active Mentors" style="-fx-font-size: 14;" />
                                                <Text fill="WHITE" text="128" style="-fx-font-size: 32; -fx-font-weight: bold;" />
                                            </children>
                                        </VBox>
                                        <VBox prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-color: #E0E0E0; -fx-border-radius: 15;">
                                            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                                            <children>
                                                <Text fill="#7F8C8D" text="New Opportunities" style="-fx-font-size: 14;" />
                                                <Text text="14" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-fill: #27AE60;" />
                                            </children>
                                        </VBox>
                                        <VBox prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-color: #E0E0E0; -fx-border-radius: 15;">
                                            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                                            <children>
                                                <Text fill="#7F8C8D" text="Applications" style="-fx-font-size: 14;" />
                                                <Text text="05" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-fill: #F39C12;" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <HBox spacing="30.0">
                                    <children>
                                        <VBox prefWidth="600.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
                                            <children>
                                                <Label text="Recent Networking Activity" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                                                <TableView prefHeight="300.0" style="-fx-background-color: transparent;">
                                                    <columns>
                                                        <TableColumn prefWidth="150.0" text="Alumni Name" />
                                                        <TableColumn prefWidth="150.0" text="Company" />
                                                        <TableColumn prefWidth="150.0" text="Status" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </VBox>

                                        <VBox HBox.hgrow="ALWAYS" spacing="15.0" style="-fx-background-color: #2C3E50; -fx-background-radius: 15; -fx-padding: 20;">
                                            <children>
                                                <Label text="Career Events" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" />
                                                <VBox spacing="10" style="-fx-background-color: #34495E; -fx-padding: 10; -fx-background-radius: 10;">
                                                    <children>
                                                        <Text fill="WHITE" text="Tech Meetup 2026" style="-fx-font-weight: bold;" />
                                                        <Text fill="#BDC3C7" text="Feb 20th - Alumni Hall" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="10" style="-fx-background-color: #34495E; -fx-padding: 10; -fx-background-radius: 10;">
                                                    <children>
                                                        <Text fill="WHITE" text="Resume Workshop" style="-fx-font-weight: bold;" />
                                                        <Text fill="#BDC3C7" text="March 2nd - Virtual" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</HBox>